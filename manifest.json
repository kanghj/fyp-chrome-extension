{
  "manifest_version": 2,

  "name": "Learning a second language from news articles",
  "description": "Learn a second language by getting translations in articles, quizzes for words learned while tracking your learning history",
  "version": "1.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background":{
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches":[
        "http://*.cnn.com/*",
        "http://*.chinadaily.com.cn/*",
        "http://*.bbc.com/*",
        "http://*/*",
        "https://*/*"
      ],
      "css": [
        "gt_popup_css_compiled.css",
        "gt_bubble_gss.css"
      ],
      "js":[
        "jquery-2.1.1.min.js",
        "bootstrap/js/bootstrap.min.js",
        "contentscript.js"
      ],
      "html":["bing.html"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "web_accessible_resources":[
    "background.html",
    "bootstrap/*",
    "slider/*",
    "icons/*"
  ],
  "permissions": [
    "tabs","<all_urls>","identity","storage","http://*/*"
  ]
}
